<Page xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
	<Page.Toolbar>
		<Toolbar>
			<Button Content="Створити" Icon="Add" Command="{BindCmd Command=Dialog, Action=Append, Url='/books/author/edit', Argument={Bind Authors}}" />
			<Button Content="Редагувати" Icon="Edit" Command="{BindCmd Command=Dialog, Action=EditSelected, Url='/books/author/edit', Argument={Bind Authors}}"/>
			<Button Content="Видалити" Icon="Delete" Command="{BindCmd DbRemoveSelected, Argument={Bind Authors}, Confirm='Дійсно видалити?'}"/>
			<Separator/>
			<Button Content="Оновити" Icon="Reload" Command="{BindCmd Reload}"/>
		</Toolbar>
	</Page.Toolbar>
	
	
	<DataGrid ItemsSource="{Bind Authors}" Hover="True" Striped="true" GridLines="Both" 
		DoubleClick="{BindCmd Command=Dialog, Action=EditSelected, Url='/books/author/edit', Argument={Bind Authors}}" >
		<DataGridColumn Header="Id" Content="{Bind Id}" Command="{BindCmd Command=Dialog, Action=Edit, Url='/books/author/edit', Argument={Bind}}" />
		<DataGridColumn Header="Ім'я" Content="{Bind Name}" />
		<DataGridColumn Header="Коментар" Content="{Bind Memo}" />
		<DataGridColumn Fit="True">
			<CommandBar Visibility="Active">
				<Button Icon="Edit" Command="{BindCmd Command=Dialog, Action=Edit, Url='/books/author/edit', Argument={Bind}}"/>
				<Button Icon="Clear" Command="{BindCmd Command=DbRemove, Argument={Bind}, Confirm='Дійсно видалити?'}"/>
			</CommandBar>
		</DataGridColumn>
	</DataGrid>
</Page>