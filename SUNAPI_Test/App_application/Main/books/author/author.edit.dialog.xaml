<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
	Title="{Bind Author.Id, Format='Автор [{0}]'}">

	<Dialog.Buttons>
		<Button Content="Зберегти" Style="Primary" Command="{BindCmd Command=SaveAndClose}" />
		<Button Content="Закрити" Command="{BindCmd Command=Close}" />
	</Dialog.Buttons>
	
	<Grid Columns="1*, 1*">
		<TextBox Value="{Bind Author.Name}" Label="Ім'я" Grid.Row="1" Grid.Col="1" UpdateTrigger="Input" />
		<TextBox Value="{Bind Author.Memo}" Label="Коментар" Grid.Row="2" Grid.Col="1" Grid.ColSpan="2" Multiline="True" UpdateTrigger="Input" />
	</Grid>

</Dialog>