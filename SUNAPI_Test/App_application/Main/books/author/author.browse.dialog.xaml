<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
        Title="Вибір автора">
	<Dialog.Buttons>
		<Button Content="@[Select]" Command="{BindCmd Select, Argument={Bind Authors}}"/>
		<Button Content="@[Cancel]" Command="{BindCmd Close}"/>
	</Dialog.Buttons>

	<DataGrid ItemsSource="{Bind Authors}" Hover="True" Striped="True" GridLines="Both" 
		DoubleClick="{BindCmd Select, Argument={Bind Authors}}" >
		<DataGridColumn Header="Id" Content="{Bind Id}" />
		<DataGridColumn Header="Ім'я" Content="{Bind Name}" />
	</DataGrid>
	
</Dialog>