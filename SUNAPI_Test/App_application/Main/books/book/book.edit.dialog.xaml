<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
	Title="{Bind Book.Id, Format='Книга [{0}]'}">

	<Dialog.Buttons>
		<Button Content="Зберегти" Style="Primary" Command="{BindCmd Command=SaveAndClose}" />
		<Button Content="Закрити" Command="{BindCmd Command=Close}" />
	</Dialog.Buttons>
	
	<Grid Columns="1*, 1*">
		<TextBox Value="{Bind Book.Name}" Label="Ім'я" Grid.Row="1" Grid.Col="1" UpdateTrigger="Input" />

		<Selector Label="Автор" Value="{Bind Book.Author}" Grid.Row="1" Grid.Col="2"
			DisplayProperty="Name" Delegate="fetchAuthor">
			<Selector.AddOns>
				<Hyperlink Icon="Search" Command="{BindCmd Command=Browse, Url='/books/author/browse', Argument={Bind Book.Author}}" />
			</Selector.AddOns>
		</Selector>

		<TextBox Value="{Bind Book.Code}" Label="Артикул" Grid.Row="2" Grid.Col="1" />
		<TextBox Value="{Bind Book.ISBN}" Label="ISBN" Grid.Row="2" Grid.Col="2" />

		<TextBox Value="{Bind Book.Memo}" Label="Коментар" Grid.Row="3" Grid.Col="1" Grid.ColSpan="2" Multiline="True" UpdateTrigger="Input" />
		
	</Grid>

</Dialog>