<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
	Title="{Bind Publisher.Id, Format='Видавниство [{0}]'}">

    <Dialog.Buttons>
        <Button Content="Зберегти" Style="Primary" Command="{BindCmd Command=SaveAndClose,ValidRequired=True}" />
        <Button Content="Закрити" Command="{BindCmd Command=Close}" />
    </Dialog.Buttons>

    <Grid Columns="1*, 1*">
        <TextBox Value="{Bind Publisher.Name}" Label="Назва Видавниства" Grid.Row="1" Grid.Col="1" UpdateTrigger="Input" />
        <TextBox Value="{Bind Publisher.Memo}" Label="Коментар" Grid.Row="2" Grid.Col="1" Grid.ColSpan="2" Multiline="True" UpdateTrigger="Input" />
    </Grid>

</Dialog>